services:
  traefik:
    image: traefik:v3.5.3
    container_name: traefik-vaultwarden
    hostname: traefik
    restart: unless-stopped
    ports:
      - "8080:80"
      - "8443:443"
      - "127.0.0.1:8081:8080"  # API/Dashboard - localhost only for security
    networks:
      - traefik-public
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock:ro
      - ./config/traefik.yml:/etc/traefik/traefik.yml:ro
      - ./dynamic:/etc/traefik/dynamic:ro
      - ./acme.json:/acme.json
      - ./logs:/var/log/traefik
      - /etc/localtime:/etc/localtime:ro
    environment:
      - TZ=UTC
      - CF_DNS_API_TOKEN=YOUR_CLOUDFLARE_API_TOKEN_HERE
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.dashboard.rule=Host(`traefik.example.com`)"
      - "traefik.http.routers.dashboard.entrypoints=websecure"
      - "traefik.http.routers.dashboard.tls=true"
      - "traefik.http.routers.dashboard.tls.certresolver=letsencrypt"
      - "traefik.http.routers.dashboard.service=api@internal"
      - "traefik.http.routers.dashboard.middlewares=dashboard-auth"
      - "traefik.http.middlewares.dashboard-auth.basicauth.users=admin:YOUR_HASHED_PASSWORD_HERE
    healthcheck:
      test: ["CMD", "traefik", "healthcheck", "--ping"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 30s
    logging:
      driver: "json-file"
      options:
        max-size: "500m"
        max-file: "2"
    security_opt:
      - no-new-privileges:true

networks:
  traefik-public:
    external: true
